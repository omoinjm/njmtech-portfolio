// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
   "name": "NJM Tech Portfolio dev container",
   // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
   "dockerFile": "Dockerfile",
   "context": "..",
   "workspaceFolder": "/workspaces/njmtech-portfolio",
   "postCreateCommand": "bash .devcontainer/scripts/post-create-commands.sh",
   "postAttachCommand": "bash .devcontainer/scripts/post-attach-commands.sh",
   // Features to add to the dev container. More info: https://containers.dev/features.
   "features": {
      "ghcr.io/devcontainers/features/github-cli:1": {},
      "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {},
      "ghcr.io/devcontainers/features/node:1": {
         "version": "18"
      }
   },
   // Use 'forwardPorts' to make a list of ports inside the container available locally.
   "forwardPorts": [
      3000,
      3001
   ],
   // Configure tool-specific properties.
   "customizations": {
      "vscode": {
         "settings": {
            "terminal.integrated.shell.linux": "/bin/bash",
            "workbench.colorTheme": "Andromeda",
            "workbench.iconTheme": "material-icon-theme",
            "git.decorations.enabled": true,
            "git.autofetch": true,
            "git.confirmSync": false,
            "git.enableSmartCommit": true
         },
         "extensions": [
            "dbaeumer.vscode-eslint",
            "esbenp.prettier-vscode",
            "ms-azuretools.vscode-docker",
            "github.copilot",
            "github.codespaces",
            "hermitter.oh-lucy-vscode",
            "pkief.material-icon-theme",
            "devondcarew.bazel-code",
            "dsznajder.es7-react-js-snippets",
            "ms-vscode.vscode-typescript-tslint-plugin",
            "esbenp.prettier-vscode",
            "DavidAnson.vscode-markdownlint",
            "ms-vscode-remote.remote-containers"
         ]
      }
   },
   "runArgs": [
      "--env-file",
      ".devcontainer/.env",
      "--privileged"
   ],
   "mounts": [
      "source=${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,type=bind,consistency=cached",
      "source=njmtech.portfolio-bashhistory,target=/commandhistory,type=volume",
      "source=/home/omoi/development/omoi/njmtech-portfolio,target=/usr/src/app,type=bind"
   ],
   // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
   "remoteUser": "root"
}